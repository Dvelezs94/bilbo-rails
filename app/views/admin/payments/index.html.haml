= render 'shared/header_admin', menu: "payments"
.content.content-fixed
  .container.pd-x-0.pd-lg-x-10.pd-xl-x-0
    .d-flex.align-items-center.justify-content-between.mg-b-20.mg-lg-b-30
      %div
        %nav{"aria-label" => "breadcrumb"}
          %ol.breadcrumb.breadcrumb-style1.mg-b-10
            %li.breadcrumb-item
              %a{:href => admin_payments_path}= t("campaign.home")
            %li.breadcrumb-item.active{"aria-current" => "page"}= t("payments.payments")
        %h4.mg-b-0.tx-spacing--1= t("payments.payments")
    .row
      .table-responsive
        %table#userCampaignTable.table
          %thead
            %tr
              %th= t("payments.admin.created_at")
              %th= t("payments.admin.paid_at")
              %th= t("invoices.status")
              %th User
              %th Total
              %th= t("payments.reference_field")
              %th= t("payments.actions")
          %tbody= render partial: "admin/payments/payment_row", collection: @payments, as: :payment
