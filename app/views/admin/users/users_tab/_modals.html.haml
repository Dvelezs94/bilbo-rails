          .mg-sm-r-30
            .pos-relative.d-inline-block.mg-b-20
              .avatar.avatar-xxl
                %span.avatar-initial.rounded-circle.bg-gray-700.tx-normal
                  %i.icon.ion-md-person
              %a.contact-edit-photo{:href => ""}
                %i{"data-feather" => "edit-2"}
