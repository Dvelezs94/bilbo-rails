          .flex-fill
            %h6.mg-b-10 Personal Information
            .form-group.mg-b-10
              %input.form-control{:placeholder => "Firstname", :type => "text"}/
            / form-group
            .form-group.mg-b-10
              %input.form-control{:placeholder => "Lastname", :type => "text"}/
            / form-group
            %h6.mg-t-20.mg-b-10 Contact Information
            .form-group.mg-b-10
              %input.form-control{:placeholder => "Phone number", :type => "text"}/
            / form-group
            .form-group.mg-b-10
              %input.form-control{:placeholder => "Email address", :type => "email"}/
            / form-group
            %h6.mg-t-20.mg-b-10 Notes
            %textarea.form-control{:placeholder => "Add notes", :rows => "2"}
          / col
      .modal-footer
        .wd-100p.d-flex.flex-column.flex-sm-row.justify-content-end
          .dropup.mg-b-15.mg-sm-b-0.mg-sm-r-auto
            %button.btn.btn-block.bd.bd-gray-300{"data-toggle" => "dropdown", :type => "button"}
              Add More Fields
              %i.icon.ion-ios-arrow-up.mg-l-5
            .dropdown-menu.tx-13
              %a.dropdown-item{:href => ""} Email
              %a.dropdown-item{:href => ""} Phone
              %a.dropdown-item{:href => ""} Address
              %a.dropdown-item{:href => ""} Custom
            / dropdown-menu
          %button.btn.btn-primary.mg-b-5.mg-sm-b-0{:type => "button"} Save Contact
          %button.btn.btn-secondary.mg-sm-l-5{"data-dismiss" => "modal", :type => "button"} Discard
      / modal-footer
    / modal-content
  / modal-dialog
/ modal
