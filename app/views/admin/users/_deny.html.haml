#modalDeny.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header.text-center
        %h4.modal-title.w-100.font-weight-bold= t('verification.reason')
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body.mx-3
        .md-form
        %label{"data-error" => "wrong", "data-success" => "right", :for => "message t('verification.subject_deny')"}= t('verification.reason_message')
        %i.fe.fe-pencil
        %textarea#message.md-textarea.form-control{:rows => "4", :type => "text"}
      .modal-footer.d-flex.justify-content-center
        = link_to '#', method: :patch, id: "user", data: {  confirm: "You sure you want to deny?" } do
          .btn.btn-sm.btn-outline-danger.d-flex.align-items-center.mg-r-5
            %i.fe.fe-close
            %span.d-none.d-sm-inline.mg-l-5= t('verification.profile')
.text-center
  %input{:id => "user-id", :type => "hidden"}
