.col-12.col-md-3
    - begin
        = link_to bilbo_landing_path(board.country_state, board.city, board.parameterized_name) do
            -if board.images.attachments.present?
                = image_tag url_from_media(board.images.first), class: "ht-200 o-fit-cover wd-100p rounded"
            -else
                = image_tag "#{image_path("placeholder_sm")}", class: "ht-200 o-fit-cover wd-100p rounded"
            %h5.tx-gray-800.mg-t-15= board.name
            %span.tx-gray-500.d-block= board.short_address
            %span.tx-gray-500.d-block= "#{number_to_currency_usd(board.cycle_price)} #{ENV.fetch("CURRENCY")} / spot"
    - rescue
        = image_tag image_path("placeholder_sm"), class: "ht-200 o-fit-cover wd-100p rounded"
        %h5.tx-gray-800.mg-t-15 -
        %span.tx-gray-500.d-block - 
        %span.tx-gray-500.d-block -