%table.table
    %tbody
        %tr.bd-hidden
            %th.wd-50p.tx-14.tx-gray-3= t("campaign.wizard.campaign_classification")
            %th.tx-gray-2= t("campaign.classification.#{@campaign.classification}")
        %tr.bd-hidden
            %th.wd-50p.tx-14.tx-gray-3= t("campaign.wizard.campaign_duration")
            %th.tx-gray-2= "#{@campaign.duration_in_days} #{t('week_days.days')}"
        %tr.bd-hidden
            %th.wd-50p.tx-14.tx-gray-3= t("campaign.dates")
            %th.tx-gray-2= "#{I18n.l(@campaign.starts_at.to_date, format: :short) rescue '-'} - #{I18n.l(@campaign.ends_at.to_date, format: :short) rescue '-'}"
        %tr.bd-hidden
            %th.wd-50p.tx-14.tx-gray-3= t("campaign.objective")
            %th.tx-gray-2= t("campaign.objectives.#{@campaign.objective}")
        %tr.bd-hidden
            %th.wd-50p.tx-14.tx-gray-3= t("campaign.wizard.selected_bilbos")
            %th.tx-gray-2= @campaign.boards.count
.divider-text= t("campaign.frequency.title")
.tx-center
    %ul.list-group
    - @campaign.impression_hours.each do |hr|
        %li.list-group-item= "#{t("week_days.#{hr.day}")} #{t("general_inputs.from")} #{hr.start.strftime('%I:%M %p')} #{t("campaign.wizard.to")} #{hr.end.strftime('%I:%M %p')}"
            