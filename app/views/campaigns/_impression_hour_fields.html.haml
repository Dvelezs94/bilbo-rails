.row.mg-b-10.nested-fields{:hour_row => ""}
  .quantity{style: "margin-right: 10px;margin-left: 10px;"}
    = f.select :day, options_for_select([[I18n.t('week_days.everyday'), 'everyday'], [I18n.t('week_days.mon'), 'monday'], [I18n.t('week_days.tue'), 'tuesday'], [I18n.t('week_days.wed'), 'wednesday'], [I18n.t('week_days.thu'), 'thursday'], [I18n.t('week_days.fri'), 'friday'], [I18n.t('week_days.sat'), 'saturday'], [I18n.t('week_days.sun'), 'sunday']], f.object.day),{include_blank: I18n.t("week_days.days")} , class: "custom-select days_of_week", :required => true
  .quantity{style: "margin-right: 10px;margin-left: 10px;"}
    .input-group
      .input-group-prepend
        %span.input-group-text $
      %input.budget.form-control.input-group-text.text-center.input-number{:min => "1", :step => "any", :type => "number"}
      = f.number_field :imp, { :min => "1", :step => "1", :class => "form-control impressionsPerHour", :required => true, placeholder: 300}
      .input-group-append
        %span.input-group-text= t("campaign.impressions")

  %span{style: "margin-top:10px;"}= t('general_inputs.from')
  .quantity{style: "margin-right: 10px;margin-left: 20px;"}
    = f.time_field :start, { :class => "form-control timePickerStart", :required => true }
  %span{style: "margin-top:10px;"}= t('campaign.wizard.to')
  .quantity{style: "margin-right: 10px;margin-left: 20px;"}
    =f.time_field :end, { :class => "form-control timePickerEnd", :required => true}
  = link_to_remove_association "<i class='fe fe-trash tx-danger fnt-md mg-t-5'></i>".html_safe, f, :onclick => "buttonSubstraction();", :class => 'noValidate'
