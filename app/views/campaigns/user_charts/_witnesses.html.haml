/ media
/ col
.col-md-6.col-xl-4.mg-t-10
  .card
    .card-header.d-flex.align-items-center.justify-content-between
      %h6.mg-b-0 Testigos
    -if @campaign.witnesses.present?
      %ul.card.activity-table.list-group.list-group-flush.tx-13{:style => "height: 340px;"}
        -@witnesses.each do |witness|
          %li.list-group-item.d-flex.pd-sm-x-20
            %i.fa.fa-camera.fnt-25px{"aria-hidden" => "true"}
            .pd-sm-l-10.pd-l-5
              %small.tx-bold.tx-gray-3.tx-12.tx-color-03.mg-b-0= I18n.l witness.created_at, format: :long
            .mg-l-auto.text-right
              -if witness.pending?
                %button.btn.btn-warning.btn-uppercase{:type => "button"} pendiente

              -else
                = button_to evidences_witness_modal_witness_path(witness), {:method => "get", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: "btn btn-primary btn-uppercase pd-l-30 pd-r-30"} do
                  ver
                  %i{"class" => "fa fa-arrow-right", "aria-hidden" => "true"}
    -else
      .card-body.pd-t-80.align-items-center.justify-content-between{:style => "height: 340px;"}
        .row-flex
          .col-md-12.text-center
            %i.fa.fa-camera.fnt-xlg{"aria-hidden" => "true"}
            %h6.tx-bold.tx-gray-3.tx-13.tx-color-03.mg-b-0 Puede solicitar fotos de las pantallas
            %h6.tx-bold.tx-gray-3.tx-13.tx-color-03.mg-b-0.pd-b-20 que ocuparas en tus pantallas
            = form_with(model: @witness, local: true) do |form|
              = form.hidden_field :campaign_id, value: "#{@campaign.id}"
              = form.submit "Solicitar Testigos", class: 'btn btn-sm  btn-outline-primary btn-uppercase'
