#modalCampaignBoardsUsed.modal.fade.effect-slide-in-top{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-body.pd-20
        %button.close.pos-absolute.t-15.r-20{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h5.tx-18.tx-sm-20= t("campaign.bilbos_used")
        %p.tx-14= "#{@campaign.name}"
        .row
          .col-12.m-auto
            %ul.list-group.list-group-flush.tx-13
            - @board_campaigns.each do |board_campaign|
              %li.list-group-item.d-flex.pd-sm-x-20
                .avatar
                  - if board_campaign.board.images.attached?
                    = image_tag url_from_media(board_campaign.board.images.first)
                  - else
                    = image_tag image_path("board_placeholder")
                .pd-l-10
                  %p.tx-medium.mg-b-0= board_campaign.board.name
                  %small.tx-12.tx-color-03.mg-b-0= "#{board_campaign.board.face} - "
                  = link_to "#" do
                    %small.tx-12.mg-b-0
                      Ver contenido
                      %i.fe.fe-arrow-down

                .mg-l-auto.d-flex.align-self-center
                  %nav.nav.nav-icon-only
                    - if board_campaign.in_review?
                      %span.tx-warning= t('bilbos.' + board_campaign.status)
                    - elsif board_campaign.approved?
                      %span.tx-success= t('bilbos.' + board_campaign.status)
                    - elsif board_campaign.denied?
                      %span.tx-danger= t('bilbos.' + board_campaign.status)

      .modal-footer
        %button.btn.btn-secondary.mg-sm-l-5{"data-dismiss" => "modal", :type => "button"}= t("general_inputs.close")
      / modal-footer
    / modal-content
  / modal-dialog
/ modal
