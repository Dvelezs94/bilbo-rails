<tr>
  <th scope="row">
    <div class="custom-control custom-switch px-4">
      <%= check_box_tag "customSwitch-#{campaign.slug}", nil, campaign.state, class: "custom-control-input", data: { url: toggle_state_campaign_path(campaign.slug), remote: :true, method: :put } %>
      <label class="custom-control-label" for="customSwitch-<%= campaign.slug %>"></label>
    </div>
  </th>
  <td data-toggle="tooltip" data-placement="top" title="<%= campaign.description %>" class="tx-medium truncate"><%= campaign.name %></td>
  <td class="text-right"><%= campaign.boards.length %></td>
  <td class="text-right"><%= link_to(campaign.ad.name, ad_path(campaign.ad)) rescue t("ads.no_ad") %></td>
  <td class="text-right"><%= I18n.l(campaign.starts_at.to_date, format: :long) rescue "-" %></td>
  <td class="text-right"><%= I18n.l(campaign.ends_at.to_date, format: :long) rescue "-" %></td>
  <td class="text-right tx-medium"><%= campaign.impressions.length %></td>
  <td class="text-right"><%= number_to_currency_credit(campaign.budget) %></td>
  <td class="text-right"><%= number_to_currency_credit(campaign.total_invested) %></td>
  <td><div class="d-flex"><a href="<%= edit_campaign_path(campaign) %>" data-toggle="tooltip" data-placement="top" title="<%= t("general_inputs.edit") %>" class="tx-20"><i class="fe fe-edit"></i></a>
  <a href="<%= analytics_campaign_path(campaign) %>" data-toggle="tooltip" data-placement="top" title="<%= t("campaign.metrics") %>" class="pd-l-5 tx-20"><i class="fe fe-activity"></i></a></div></td>
</tr>
