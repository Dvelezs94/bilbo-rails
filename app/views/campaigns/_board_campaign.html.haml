-if media.is_video?
  = video_tag(url_from_media(media.multimedia.url), class: "board-ad-inner", data: { campaign: campaign.slug, "campaign-id": campaign.id, budget: campaign.budget }, loop:true, preload: "auto", muted: "muted")
-else
  = image_tag url_from_media(media.multimedia.url), class: "board-ad-inner", data: { campaign: campaign.slug, "campaign-id": campaign.id, budget: campaign.budget }
