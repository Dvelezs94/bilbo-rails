%h3= t('campaign.wizard.campaign_minute')
%section
  %form
    .row.justify-content-xl-center
    .divider-text= t('campaign.wizard.title_impressions_per_minute')
    .form-row
      .col-12.form-row.justify-content-xl-center
        .quantity{style: "margin-right: 10px;margin-left: 10px;"}
          = f.number_field :imp ,{:id => "imp_minute", :min => "1", :step => "1", :type => "number", :placeholder => "1", :class => "form-control", :required => true}
        %span{style: "margin-top:10px;"}= t('campaign.wizard.impressions')
        .quantity{style: "margin-right: 10px;margin-left: 10px;"}
          = f.number_field :minutes,{:id => "campaign_minutes", :min => "1", :step => "1", :type => "number", :placeholder => "1", :class => "form-control", :required => true}
        %span{style: "margin-top:10px;"}= t('campaign.wizard.minute')
    .col-4
    .divider-text= t('campaign.wizard.campaign_duration')
    .form-row
      .col-12
        .custom-control.custom-radio
          %input#date_campaign.custom-control-input{:name => "customRadio", :type => "radio", :checked => "#{'true' if !@campaign.ongoing?}"}/
          %label.custom-control-label{:for => "date_campaign"}= t('campaign.wizard.pick_date')
        .custom-control.custom-radio
          %input#ongoing_campaign.custom-control-input{:name => "customRadio", :type => "radio", :checked => "#{'true' if @campaign.ongoing?}"}/
          %label.custom-control-label{:for => "ongoing_campaign"}= t('campaign.wizard.ongoing_campaign')
      .col-12.form-row
        .col-6= f.text_field :starts_at, :class => "form-control", placeholder: t('campaign.wizard.start_date')
        .col-6= f.text_field :ends_at, :class => "form-control", placeholder: t('campaign.wizard.end_date')
