if(!$("#modalContent").length){
  $("body").append("<%= j (render 'campaigns/wizard/content', locals: {content: @content, board: @board, :campaign => @campaign}) %>");
}
$("#modalContent").modal();
$("#paginator a").hide();
$("#single_content").append('<%= j render(partial: "shared/loading_ads")%>');
scroll_wizard();
setTimeout(function() {
  $('#spinner').remove();
  $("#single_content").append("<%= j render partial: 'campaigns/wizard/contents_modal'%>");
  setImageLoader();
  $('#paginator').html('<%= j (link_to_next_page @content, "#{t("content.more_contents")}"'<i class="ion-arrow-down-c" style="padding-left:5px;"></i>'.html_safe, :remote => true, :param_name => "ad_upcoming_page")%>');
  $("#paginator a").show();
  select_content();
  initialize_content_filter();
}, 1000);
