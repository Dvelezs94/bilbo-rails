%h3= t("campaign.wizard.pick_ad")
%section
  = f.text_field :ad_id, :class => "d-none", required: true, readonly: true
  %hr
    .container.pd-x-0.pd-lg-x-10.pd-xl-x-0
      .row#abc.wizard-height
        = render partial: "ads/new_ad_card"
        = render :partial => 'ads/overview_card', collection: @ad_upcoming, as: :ad
      .card
        .card-footer#paginator.text-center.tx-13
          = link_to_next_page @ad_upcoming, "#{t("ads.more_ads")}"'<i class="ion-arrow-down-c" style="padding-left:5px;"></i>'.html_safe, :remote => true, :param_name => "ad_upcoming_page", on_click: "select_ad();", id: "next_page"
