// check wether this bilbo accepts videos and images
if ($('div[data-images-only="true"]').length && <%= format == "video" %>) {
  show_success("<%= t('content.success_without_video') %>");
} else { // this is in case the bilbo only accepts images
  $("#single_content").prepend("<%= j render partial: 'campaigns/wizard/single_content_modal', collection: @content_array, as: :content%>");
  remove_on_click();
  if($("#modalDefaultContent").length){
    selectDefaultContent();
  }else{
    select_content();
  }
  initialize_content_filter();
  // run auto reload on recently created content
  auto_fetch_content("<%= @content.id %>");
  //show_success("<%= t('content.success') %>");
}

// after complete close all modals
if($("#modalNewMultimedia").length){
  $('#modalNewMultimedia').modal('hide');
}else if ($('#modalNewUrl').length) {
  $('#modalNewUrl').modal('hide');
}
