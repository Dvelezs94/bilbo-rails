.col-sm
  -if content.is_video?
    = link_to content.multimedia_url(:transcoded), class: "glightbox img-inherit", :data => {caption: content.multimedia.metadata["filename"], group: @project.slug, id: "#{content.id}"} do
      .card#card-ad-link{"data-content": "#{content.id}", class: "img wd-100 ht-100 rounded"}
        = image_tag content.multimedia_url(:large), class: "img-inherit", :controls => false, :controlslist => "nodownload" , autoplay: false, loop: true, muted: 'muted'
  -else
    -if content.multimedia(:large).height <= 1080
      = link_to content.multimedia_url(:small), class: "glightbox img-inherit", :data => {caption: content.multimedia.metadata["filename"], group: @project.slug, type: "image", id: "#{content.id}"} do
        .card#card-ad-link{"data-content": "#{content.id}", class: "img wd-100 ht-100 rounded"}
          = image_tag content.multimedia_url(:small), class: "img wd-100 ht-100 rounded"
    -else
      = image_tag "construction_video.webp", class: "img-inherit"
