%tr
  %th
    -if board.images.attachments.present?
      -board.images.each do |image|
        = image_tag image, class: "img wd-50 ht-50 rounded"
    -else
      = image_tag "https://via.placeholder.com/100", class: "mg-r-5 mg-b-5 img wd-50 ht-50 rounded"
  %td.valign-middle-f.tx-bold= board.name
  %td.valign-middle-f.tx-gray-700 #{board.duration} Seg
  %td.valign-middle-f.tx-gray-700 1920x1080
  -if board.images_only
    %td.valign-middle-f.tx-gray-700 Imagen
  -else
    %td.valign-middle-f.tx-gray-700 Imagen, video
  %td<
    %div
      = link_to multimedia_contents_board_campaign_index_path(board_slug: board.slug, board_name: board.name, campaign: @campaign), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: "btn btn-outline-primary bd-dotted wd-50 ht-50 btn-icon mg-r-5 mg-b-5"} do
        %i.fe.fe-plus.valign-middle-f
      -if board.board_campaigns.find_by(campaign_id: @campaign).present?
        .d-flex
          - board.board_campaigns.find_by(board_id: board.id, campaign_id: @campaign).contents_board_campaign.each do |b|
            %figure.img-caption.pos-relative.mg-b-0.fit-content{signed_id: "#{b.id}"}
              = image_tag b.content.multimedia_url(:small), {class: "mg-r-5 mg-b-5 img wd-50 ht-50 rounded", id: "content-#{b.content_id}-#{board.slug}"}
              %figcaption.pos-absolute.a-0.wd-50.ht-50.mg-r-5.mg-b-5.rounded.d-flex.flex-column.justify-content-center.bg-white-9.transition-base.op-0
                /= link_to "", method: :delete, remote: true, class: "btn btn-dark btn-icon", data: { confirm: t("general_inputs.confirm_deletion") } do
                /  %i.fe.fe-trash
                = link_to("Click me", "javascript: delete_content('#{b.content_id}', '#{board.slug}');", :id => "content-delete-#{b.content_id}-#{board.slug}", class: "btn btn-dark btn-icon mg-r-5 mg-b-5 img wd-50 ht-50 rounded")
              = hidden_field_tag "content_board_campaign_id", board.board_campaigns.find_by(board_id: board.id, campaign_id: @campaign).contents_board_campaign.map{|cc| cc.content_id}, :id => "#{board.slug}"
        %div{:id => "images-#{board.slug}"}
      -else
        = image_tag "https://via.placeholder.com/100", class: "mg-r-5 mg-b-5 img wd-50 ht-50 rounded"
        = hidden_field_tag "content_board_campaign_id", board.board_campaigns.where(board_id: board.id, campaign_id: @campaign).map{|cc| cc.content_id}, :id => "#{board.slug}"
        %div{:id => "images-#{board.slug}"}
