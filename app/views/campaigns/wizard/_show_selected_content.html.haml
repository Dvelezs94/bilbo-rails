= render partial: 'campaigns/wizard/add_content_button', locals: {board: board, campaign: @campaign}
%figure.img-caption.pos-relative.mg-b-0.fit-content.d-inline-block{id: "content-#{img.id}-#{board.slug}"}
  = image_tag img.multimedia_url(:small), {class: "mg-r-5 mg-b-5 img wd-50 ht-50 rounded"}
  %figcaption.pos-absolute.a-0.wd-50.ht-50.mg-r-5.mg-b-5.rounded.d-flex.flex-column.justify-content-center.bg-white-9.transition-base.op-0
    = link_to('<i class="fe fe-trash"></i>'.html_safe, "javascript: delete_content('#{img.id}', '#{board.slug}');", :id => "content-delete-#{img.id}-#{board.slug}", class: "btn btn-danger btn-icon mg-r-5 mg-b-5 img wd-50 ht-50 rounded")
