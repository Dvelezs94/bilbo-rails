.accordion.accordion-style1
  .d-flex
    = board.name
    -if board.smart
      .pd-l-5
        .badge.badge-info.wizard-badge-smart
          .pd-t-2
            %i.fe.fe-star
            SMART
  %div
    %table.table-responsive.wizard-table.border-0.bg-transparent.overflow-hidden
      %tbody
        %tr
          %td.wd-15p
            -if board.images.attachments.present?
              - image = board.images.first
              = image_tag url_from_media(image), class: "img wd-100 ht-100 rounded"

            -else
              = image_tag "#{image_path("placeholder_sm")}", class: "mg-r-5 mg-b-5 img wd-100 ht-100 rounded"
          %td.wd-35p
            %p.pd-t-10="#{t('bilbos.face')}: #{t("bilbos.#{board.face}")}"
            %p="Price per spot: $#{board.cycle_price.round(2)}"
            %p.pd-bt-5{id: "ads_count_#{board.slug}"}
          %td.wd-50p{:rowspan => 2}
            -# %div{id: "carousel-#{board.slug}"}
            .carousel.slide.m-auto{"data-ride" => "carousel", id: "carousel-#{board.slug}"}
              .pos-relative
                %ol.carousel-indicators.carousel-circles.carousel-circles-under
                .carousel-inner.center_image_vertically{style: "position: static !important;"}

                %a.carousel-control-prev{"data-slide" => "prev", href: "#carousel-#{board.slug}", role: "button"}
                  %span.carousel-control-prev-icon{"aria-hidden" => "true"}
                    %i.fe.fe-arrow-left.tx-30
                  %span.sr-only Previous
                %a.carousel-control-next{"data-slide" => "next", href: "#carousel-#{board.slug}", role: "button"}
                  %span.carousel-control-next-icon{"aria-hidden" => "true"}
                    %i.fe.fe-arrow-right.tx-30
                  %span.sr-only Next
          %tr{:class => "#{'invisible' unless @campaign.is_per_budget?}"}
            %td{:colspan => 2}
              %table.table-responsive.wizard-table.border-0.bg-transparent.overflow-hidden
                %tbody
                  %tr
                    %td.wd-50p
                      %h4{id: "budget-summary-#{board.id}"}
                    %td.wd-20p{rowspan: 2}
                      %i.icon.ion-arrow-right-c.d-block.tx-center.pd-b-5.tx-xxl
                    %td.wd-30p
                      %h4{id: "impressions-summary-#{board.id}"}
                  %tr
                    %td
                      %p Presupuesto Diario
                    %td
                      %p Spots Diarios
              -# .row.justify-content-around
              -#   %h4{id: "budget-summary-#{board.id}"}
              -#   %i.fe.fe-arrow-right
              -#   %h4{id: "impressions-summary-#{board.id}"}
              -# .row
              -#   %p Presupuesto diario
              -#   %p Spots diarios
