= render 'shared/header', menu: "statistics"
.content.content-fixed
  .container.pd-x-0.pd-lg-x-10.pd-xl-x-0
    .d-sm-flex.align-items-center.justify-content-between.mg-b-20.mg-lg-b-25.mg-xl-b-30
      %div
        %nav{"aria-label" => "breadcrumb"}
          %ol.breadcrumb.breadcrumb-style1.mg-b-10
            %li.breadcrumb-item
              %a{:href => "/"}= t("campaign.home")
            %li.breadcrumb-item{"aria-current" => "page"}= t("header.statistics")
            %li.breadcrumb-item{"aria-current" => "page"}
              %a{:href => "provider_index", decoration: "underline"}= t("campaign.active_campaigns")
            %li.breadcrumb-item{"aria-current" => "page"}
              %a{:href => "provider_index?q=review" }=t("campaign.review_campaigns")
        %h4.mg-b-0.tx-spacing--1
          = t("campaign.campaign")
      .d-none.d-md-block
        %button.btn.btn-sm.pd-x-15.btn-white.btn-uppercase.mg-l-5
          %i.wd-10.mg-r-5.fe.fe-export>
          = t("header.export_csv")
        %button.btn.btn-sm.pd-x-15.btn-white.btn-uppercase.mg-l-5{:onclick => "window.print()"}
          %i.wd-10.mg-r-5.fe.fe-print>
          = t("header.print")
    .row
      .table-responsive
        %table#campaignsTable.table
          %thead
            %tr
              %th{:scope => "col"}= t("campaign.campaign_name")
              %th{:scope => "col"} Multimedia
              %th{:scope => "col"}= t("campaign.campaign_date")
              %th{:scope => "col"} Bilbos
              %th{:scope => "col"} $
              %th{:scope => "col"}= t("campaign.status")
              %th{:scope => "col"}
            %tbody= render partial: "campaigns/status_campaign", collection: @board_campaigns, as: :board_campaign
