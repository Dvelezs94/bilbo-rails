.modal-header
  %h6#adViewModal.modal-title Multimedia
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
    %span{"aria-hidden" => "true"}
      x
.modal-body
  .df-example
    #carouselExample5.carousel.slide.carousel-fade{"data-ride" => "carousel"}
      %ol.carousel-indicators
      .carousel-inner.bg-dark
        - if @objects.present?
          - @objects.each.with_index do |media,i|
            %div{class: "carousel-item #{'active' if i == 0}"}
              -if media.is_video?
                = link_to media.multimedia_url(:transcoded), class: "glightbox", :data => {caption: media.multimedia.metadata["filename"], group: current_project.slug} do
                  = image_tag media.multimedia_url(:large), size:"600x300", class: "d-block w-100 obj-fit-scale-down", autoplay: true, loop: true, muted: 'muted'
              -elsif media.is_url?
                = link_to media.url, class: "glightbox", :data => {caption: media.url, group: ""} do
                  %iframe.no-pointer{:src => "#{media.url}", class: "d-block w-100", :height => "300", :width => "600"}
              -else
                = link_to media.multimedia_url(:large), class: "glightbox", :data => {caption: media.multimedia.metadata["filename"], group: current_project.slug, type: "image"} do
                  = image_tag media.multimedia_url(:small), size:"600x300", class: "d-block w-100"
        - else
          .carousel-item.active
            = image_tag image_path("board_placeholder"), size:"600x300", class: "d-block w-100", alt: "No Image"
        %a.carousel-control-prev{"data-slide" => "prev", href: "#carouselExample5", role: "button"}
          %span.carousel-control-prev-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-left.tx-30
          %span.sr-only Previous
        %a.carousel-control-next{"data-slide" => "next", href: "#carouselExample5", role: "button"}
          %span.carousel-control-next-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-right.tx-30
          %span.sr-only Next
.modal-footer
  %button.btn.btn-secondary.mg-sm-l-5{"data-dismiss" => "modal", :type => "button"}= t("general_inputs.close")
/ modal-footer
