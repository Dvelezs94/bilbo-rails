.modal-header
  %h6#adViewModal.modal-title Multimedia
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
    %span{"aria-hidden" => "true"}
      x
.modal-body
  .df-example
    #carouselExample5.carousel.slide.carousel-fade{"data-ride" => "carousel"}
      %ol.carousel-indicators
      .carousel-inner.bg-dark
        - if @objects.present?
          - @objects.each.with_index do |media,i|
            %div{class: "carousel-item #{'active' if i == 0}"}
              -if media.video?
                = link_to url_from_media(media), class: "glightbox", :data => {caption: media.filename.base, group: media.record.id} do
                  = image_tag generate_thumbnail_video(media, 600, 300), size:"600x300", class: "d-block w-100 obj-fit-scale-down", autoplay: true, loop: true, muted: 'muted'
              -else
                = link_to url_from_media(media), class: "glightbox", :data => {caption: media.filename.base, group: media.record.id, type: "image"} do
                  = image_tag generate_thumbnail_image(media, 600, 300), size:"600x300", class: "d-block w-100"
        - else
          .carousel-item.active
            = image_tag image_path("board_placeholder"), size:"600x300", class: "d-block w-100", alt: "No Image"
        %a.carousel-control-prev{"data-slide" => "prev", href: "#carouselExample5", role: "button"}
          %span.carousel-control-prev-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-left.tx-30
          %span.sr-only Previous
        %a.carousel-control-next{"data-slide" => "next", href: "#carouselExample5", role: "button"}
          %span.carousel-control-next-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-right.tx-30
          %span.sr-only Next
.modal-footer
  %button.btn.btn-secondary.mg-sm-l-5{"data-dismiss" => "modal", :type => "button"}= t("general_inputs.close")
/ modal-footer
