.modal-header
  %h6#exampleModalLabel6.modal-title Multimedia
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
    %span{"aria-hidden" => "true"}
.modal-body
  .df-example{"data-label" => "Example"}
    #carouselExample5.carousel.slide.carousel-fade{"data-ride" => "carousel"}
      %ol.carousel-indicators
        - if @objects.present?
          - @objects.each.with_index do |media,i|
            %li{class: "#{'active' if i == 0}", "data-slide-to" => i, "data-target" => "#carouselExample5"}
      .carousel-inner.bg-dark
        - if @objects.present?
          - @objects.each.with_index do |media,i|
            %div{class: "carousel-item #{'active' if i == 0}"}
              = image_tag media, size:"600x300", class: "d-block w-100", :data => {lity: true}
        - else
          .carousel-item.active
            = image_tag image_path("board_placeholder"), size:"600x300", class: "d-block w-100", alt: "No Image"
        %a.carousel-control-prev{"data-slide" => "prev", href: "#carouselExample5", role: "button"}
          %span.carousel-control-prev-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-left.tx-30
          %span.sr-only Previous
        %a.carousel-control-next{"data-slide" => "next", href: "#carouselExample5", role: "button"}
          %span.carousel-control-next-icon{"aria-hidden" => "true"}
            %i.fe.fe-arrow-right.tx-30
          %span.sr-only Next
.modal-footer
  %button.btn.btn-secondary.mg-sm-l-5{"data-dismiss" => "modal", :type => "button"}= t("general_inputs.close")
/ modal-footer
