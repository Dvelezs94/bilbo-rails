.col-sm-6.col-lg-3.mg-t-5.mg-sm-t-0
    .card.card-body
        %h6.tx-uppercase.tx-11.tx-spacing-1.tx-color-02.tx-semibold.mg-b-8 Ingresos
        .d-flex.d-lg-block.d-xl-flex.align-items-end
        %h3.tx-normal.tx-rubik.mg-b-0.mg-r-5.lh-1
            = number_to_currency_usd(@monthly_earnings)
        %p.tx-11.tx-color-03.mg-b-0
            %span.tx-medium.tx-success
            ~# 1.2%
            %i.icon.ion-md-arrow-up
            ~#than last week
        .chart-three

