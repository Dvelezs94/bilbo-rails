= render 'shared/header', menu: "ads"
.filemgr-wrapper
  = render "ads/show_sidebar"
  #multimediaTab.filemgr-content
    .filemgr-content-header
      %i.fe.fe-search.pd-r-5.fnt-md
      .search-form.w-25
        %input#searchMultimedia.form-control{:placeholder => t("general_inputs.search"), :type => "search"}/
      / search-form
    / filemgr-content-header
    .filemgr-content-body
      .pd-20.pd-lg-25.pd-xl-30
        %h4.mg-b-15.mg-lg-b-25= t("ads.all_multimedia_files")
        #multimediaElements.card-group
          = render partial: "show_single_multimedia", collection: @ad.multimedia, as: :multimedia
        / row
    / filemgr-content-body
  / filemgr-content
  #configurationTab.filemgr-content.fm-content-grey.d-none
    / filemgr-content-header
    .filemgr-content-body
      .pd-20.pd-lg-25.pd-xl-30
        %h4.mg-b-15.mg-lg-b-25= t("nav_headers.configuration")
        .col-sm-12.col-lg-4.pd-0
          .pd-0
            = form_for(@ad) do |f|
              .form-group
                = f.label :name
                %br/
                = f.text_field :name, class: "form-control", required: true
              .form-group
                = f.label :description
                %br/
                = f.text_area :description, class: "form-control"
              .form-group
                = link_to raw("<i class='fe fe-trash'></i> " + t("ads.delete_ad")), ad_path(@ad), method: :delete, class: "tx-danger tx-15 confirm", data: { confirm: t("general_inputs.confirm_deletion"), title: t("general_inputs.confirm_submit"), commit: t("general_inputs.confirm"), cancel: t("general_inputs.cancel") }
              .actions
                = f.submit t("general_inputs.update"), class: "btn btn-primary btn-block"
        / row
    / filemgr-content-body
/ filemgr-wrapper
/ content
= render partial: "ads/upload_multimedia"
