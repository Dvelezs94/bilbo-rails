<%= render 'shared_user/header' %>

<div class="content content-fixed">
  <div class="container pd-x-0 pd-lg-x-10 pd-xl-x-0">
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-30">
      <div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-style1 mg-b-10">
            <li class="breadcrumb-item">
              <a href="#"><%= t("campaign.home") %></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page"><%= t("ads.ads") %></li>
          </ol>
        </nav>

        <h4 class="mg-b-0 tx-spacing--1"><%= t("ads.ads") %></h4>
      </div>
      <div class="d-none d-md-block">
        <button class="btn btn-sm pd-x-15 btn-primary btn-uppercase mg-l-5">
          <i class="wd-10 mg-r-5 fe fe-plus"></i>
          <%= t("ads.new_ad") %></button>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-lg-10">
        <div class="pd-20">
          <%= form_with(model: Ad, url: ads_path, method: :post, :html => { :id => "new_ad" }, local: false) do |f| %>

          <div class="form-group">
            <%= f.label "Nombre de Anuncio" %><br/>
            <%= f.text_field :name, class: "form-control", value: "" %>
          </div>

          <div class="form-group">
            <%= f.label "Descripcion" %><br/>
            <%= f.text_field :description, class: "form-control", value: "" %>
          </div>

          <div class="form-group col-12">
            <%= f.file_field :multimedia, multiple: true, id: "files", accept: ".png, .jpg, .jpeg, .gif, .mp4, .webm" %>
          </div>

          <div class="actions">
            <%= f.submit t("account_settings.update"), class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- row -->

</div>
<!-- container -->
</div>
<!-- content -->
