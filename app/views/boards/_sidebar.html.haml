.filemgr-sidebar.board-sidebar-width
  .filemgr-sidebar-header.ht-150-imp
    .filemgr-content-header.white-background.d-flex.align-items-center.justify-content-between.ht-150-imp
      .d-block.flex-wrap.wd-100p
        = form_with url: boards_path, method: :get, id: "filter-bilbos",class: "send-on-change mg-x-2 row flex-wrap", remote: true do |f|
          .search-form.sf-boards.pd-l-5.pd-r-5.rounded.col-12.mg-b-15
            %i.fe.fe-search.pd-r-5.fnt-md
            = f.text_field :location, class: 'form-control', id: "search_autocomplete", placeholder: t('bilbos.search.location'), |
              value: (params[:location].present?)? params[:location] : "" ,                                                               |
              lat: (params[:lat].present?)? params[:lat] : "",                                                                            |
              lng: (params[:lng].present?)? params[:lng] : ""                                                                             |
            = f.hidden_field :radius, value: params[:radius]
          .col-6.col-lg-3.pd-0
            %button.btn.filter-button{type: "button", id: "drop1", data: { toggle: "dropdown" }, aria: {haspopup: "true", expanded: "false"} }
              Tipo de medio
            .dropdown-menu{aria: {labelledby: "drop1"}}
              = f.select(:category, options_for_select([["Espectacular", "billboard"], ["Televisión", "television"], ["Cartelón", "wallboard"]], selected: params[:category]),{include_blank: t('bilbos.search.media_type')}, {class: 'custom-select'})
          .col-6.col-lg-3.pd-0.text-center
            %button.btn.filter-button{type: "button", id: "drop1", data: { toggle: "dropdown" }, aria: {haspopup: "true", expanded: "false"} }
              Clasificación
            .dropdown-menu{aria: {labelledby: "drop1"}}

          .col-6.col-lg-3.pd-0.text-center
            %button.btn.filter-button{type: "button", id: "drop1", data: { toggle: "dropdown" }, aria: {haspopup: "true", expanded: "false"} }
              Precio
            .dropdown-menu{aria: {labelledby: "drop1"}}

          .col-6.col-lg-3.pd-0.text-right
            %button.btn.filter-button{type: "button", id: "drop1", data: { toggle: "dropdown" }, aria: {haspopup: "true", expanded: "false"} }
              Dimensiones
            .dropdown-menu{aria: {labelledby: "drop1"}}


